#!/bin/bash
cmd="$HOME/.leovim.unix/linux/tokei $HOME/.leovim/conf.d -r lines -e **/plug.vim **/*.md **/*.sh **/*.cmd **/README*"
if [ $# == 1 ] && [ $1 == 'all' ]; then
    $cmd --files
    $cmd
else
    echo -e "==== \e[33mNOTE\e[0m: Add parameter \e[31mall\e[0m after command \e[32mtokei\e[0m to show details of each file ===="
    $cmd
fi
