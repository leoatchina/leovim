#!/bin/bash
cmd="$HOME/.leovim.unix/linux/tokei ./ boostup/pack/leo -e boostup/autoload/plug.vim pack fonts .git LICENSE scripts/* *.md *.sh *.cmd tokei"
cd ~/.leovim
if [ $# == 1 ] && [ $1 == 'all' ]; then
    $cmd --files 
    $cmd
else
    echo
    echo -e "Add \e[33mall\e[0m to show details of each file."
    $cmd
fi
