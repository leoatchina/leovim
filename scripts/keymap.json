  {
    "context": "Workspace",
    "bindings": {
      "shift shift": "file_finder::Toggle"
    }
  },
  {
    "context": "vim_mode == normal || vim_mode == visual",
    "bindings": {
      "s": "vim::PushSneak",
      "shift-s": "vim::PushSneakBackward"
    }
  },
  {
    "context": "vim_mode == normal || vim_mode == visual || vim_mode == insert",
    "bindings": {
      "ctrl-f": "vim::EndOfLineDownward",
      "ctrl-b": "vim::StartOfLineDownward"
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "shift-x": "vim::Exchange"
    }
  }
]
